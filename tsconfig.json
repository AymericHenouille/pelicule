{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "bin",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*.ts"],
}